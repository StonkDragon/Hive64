{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Hive64 Assembly",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#mnemonics"
		},
		{
			"include": "#directives"
		},
		{
			"include": "#registers"
		},
		{
			"include": "#labels"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#characters"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.semicolon.hive64",
					"match": "(;|@|#).*$"
				}
			]
		},
		"mnemonics": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(nop|ret|br?|blr?|br?lt|br?gt|br?ge|br?le|br?eq|br?ne|blr?lt|blr?gt|blr?ge|blr?le|blr?eq|blr?ne|add|sub|mul|div|mod|and|or|xor|shl|shr|rol|ror|ld(r|p)(q|d|w|b)?|st(r|p)(q|d|w|b)?|mov(z|k)?|br?z|br?nz|lea|svc|tst|cmp|(s|u)b(xt|dp))\\b"
			}]
		},
		"registers": {
			"patterns": [{
				"name": "storage",
				"match": "\\b(r([1-2][0-9]|3[0-1]|[0-9])|sp|bp|lr|pc)\\b"
			}]
		},
		"labels": {
			"patterns": [{
				"name": "variable.name",
				"match": "\\b([a-zA-Z_][a-zA-Z0-9_\\.\\$\\{\\}\\(\\)]*):?"
			}]
		},
		"directives": {
			"patterns": [{
				"name": "storage.register",
				"match": "(\\.(ascii|asciz|extern|byte|word|dword|qword|offset|globa?l))\\b"
			}]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric",
				"match": "\\b(0x[0-9a-fA-F]+|[0-9]+|0b[01]+|0o[0-7]+)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
				"name": "constant.character.escape",
				"match": "\\\\."
			}]
		},
		"characters": {
			"name": "string.quoted.single",
			"begin": "'",
			"end": "'",
			"patterns": [{
				"name": "constant.character.escape",
				"match": "\\\\."
			}]
		},
		"operators": {
			"name": "keyword.operator",
			"patterns": [{
				"name": "constant.character.escape",
				"match": "[\\+\\-,]"
			}]
		}
	},
	"scopeName": "source.hive64"
}