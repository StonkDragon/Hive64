{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Hive64 Assembly",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#generic_mnemonics"
		},
		{
			"include": "#float_mnemonics"
		},
		{
			"include": "#branch_mnemonics"
		},
		{
			"include": "#math_mnemonics"
		},
		{
			"include": "#vector_mnemonics"
		},
		{
			"include": "#conditions"
		},
		{
			"include": "#directives"
		},
		{
			"include": "#registers"
		},
		{
			"include": "#vector_registers"
		},
		{
			"include": "#labels"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#characters"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.semicolon.hive64",
					"match": "(;|@|#).*$"
				}
			]
		},
		"conditions": {
			"patterns": [{
				"name": "keyword.control",
				"match": "(\\.(eq|ne|le|ge|lt|gt|z|nz|mi|pl))\\b"
			}]
		},
		"generic_mnemonics": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(nop|zeroupper|ret|ldr|str|mov(z|k)?|lea|svc|cpuid|(s|u)b(xt|dp)|psh|pp)\\b"
			}]
		},
		"float_mnemonics": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b((f|s)(add|sub|mul|div|mod|cmp)i?|i2(f|s)|(f|s)2i|f2s|s2f|(f|s)(sqrt|sin))\\b"
			}]
		},
		"branch_mnemonics": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(bl?r?)\\b"
			}]
		},
		"math_mnemonics": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(add|sub|mul|div|mod|and|or|xor|shl|shr|rol|ror|neg|not|asr|asl|swe|tst|cmp|xchg|cswp|inc|dec|ext(b(w|d|q)|w(d|q)|dq))(\\s+(byte|(d|q)?word))?\\b"
			}]
		},
		"vector_mnemonics": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\bv((o|b|w|d|q|l|s|f)(add|sub|mul|div|addsub|madd|mov|conv(o|b|w|d|q|l|s|f)|len)|ldr|str)\\b"
			}]
		},
		"registers": {
			"patterns": [{
				"name": "storage",
				"match": "\\b((r|b|w|d|q)([1-2][0-9]|3[0-1]|[0-9])(h|l)?|sp|lr|pc|cr(1[01]|[0-9]))\\b"
			}]
		},
		"vector_registers": {
			"patterns": [{
				"name": "storage",
				"match": "\\b(v([0-9]|1[0-5]))\\b"
			}]
		},
		"labels": {
			"patterns": [{
				"name": "variable.name",
				"match": "([a-zA-Z_\\$][a-zA-Z0-9_\\$\\{\\}\\(\\)]*):?"
			}]
		},
		"directives": {
			"patterns": [{
				"name": "storage.register",
				"match": "(\\.(ascii|asciz|extern|byte|word|dword|qword|text|data|bss|offset|globa?l))\\b"
			}]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric",
				"match": "\\b(0x[0-9a-fA-F]+|[0-9]+|0b[01]+|0o[0-7]+)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
				"name": "constant.character.escape",
				"match": "\\\\."
			}]
		},
		"characters": {
			"name": "string.quoted.single",
			"begin": "'",
			"end": "'",
			"patterns": [{
				"name": "constant.character.escape",
				"match": "\\\\."
			}]
		},
		"operators": {
			"name": "keyword.operator",
			"patterns": [{
				"name": "constant.character.escape",
				"match": "[\\+\\-,]"
			}]
		}
	},
	"scopeName": "source.hive64"
}