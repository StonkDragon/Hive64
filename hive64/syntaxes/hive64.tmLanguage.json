{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Hive64 Assembly",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#mnemonics"
		},
		{
			"include": "#directives"
		},
		{
			"include": "#registers"
		},
		{
			"include": "#labels"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#characters"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.semicolon.hive64",
					"match": "(;|@|#).*$"
				}
			]
		},
		"mnemonics": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(nop|ret|b|bl|bzs|bzc|bns|bnc|bcs|bcc|bvs|bvc|blzs|blzc|blns|blnc|blcs|blcc|blvs|blvc|add|sub|mul|div|mod|and|or|xor|shl|shr|rol|ror|ldr|str|ldrb|strb|ldrw|strw|mov|add|sub|mul|div|mod|and|or|xor|shl|shr|rol|ror|ldr|str|ldrb|strb|ldrw|strw|bz|bnz|lea|movk|movz|svc)\\b"
			}]
		},
		"registers": {
			"patterns": [{
				"name": "storage",
				"match": "\\b((x|w|d|s)([1-2][0-9]|3[0-1]|[0-9])|sp|bp|lr|pc)\\b"
			}]
		},
		"labels": {
			"patterns": [{
				"name": "variable.name",
				"match": "\\b([a-zA-Z_][a-zA-Z0-9_\\.\\$\\{\\}\\(\\)]*):?"
			}]
		},
		"directives": {
			"patterns": [{
				"name": "storage.register",
				"match": "(\\.(ascii|asciz|extern|byte|word|dword|qword|offset))\\b"
			}]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric",
				"match": "\\b(0x[0-9a-fA-F]+|[0-9]+|0b[01]+|0o[0-7]+)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
				"name": "constant.character.escape",
				"match": "\\\\."
			}]
		},
		"characters": {
			"name": "string.quoted.single",
			"begin": "'",
			"end": "'",
			"patterns": [{
				"name": "constant.character.escape",
				"match": "\\\\."
			}]
		},
		"operators": {
			"name": "keyword.operator",
			"patterns": [{
				"name": "constant.character.escape",
				"match": "[\\+\\-,]"
			}]
		}
	},
	"scopeName": "source.hive64"
}